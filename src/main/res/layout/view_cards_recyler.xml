<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    android:padding="2dp"
    >

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="@+id/linearLayout5"
        app:layout_constraintStart_toEndOf="@+id/linearLayout5">

        <ImageView
            android:id="@+id/decImage"
            android:layout_width="112dp"
            android:layout_height="116dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:padding="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/card_back" />

        <Button
            android:id="@+id/addToDeck"
            android:layout_width="88dp"
            android:layout_height="75dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:text="add"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/linearLayout5"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.512" />

        <LinearLayout
            android:id="@+id/linearLayout5"
            android:layout_width="184dp"
            android:layout_height="101dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="8dp"
            android:orientation="vertical"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@+id/decImage"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/viewCardName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewCardName"
                android:textSize="15dp" />

            <TextView
                android:id="@+id/viewCardAtk"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewCardAtk" />

            <TextView
                android:id="@+id/viewCardDef"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="viewCardDef" />
        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

</android.support.v7.widget.CardView>