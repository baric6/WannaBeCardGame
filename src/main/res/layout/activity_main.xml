<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"

    >

    <ScrollView
        android:id="@+id/scrollView4"
        android:layout_width="404dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="2dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayout6"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="220dp"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/card2"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0.3px"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/card_back" />

                <ImageView
                    android:id="@+id/card3"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="0.3px"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/card_back" />
            </LinearLayout>

            <Button
                android:id="@+id/btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Get Cards" />

            <TextView
                android:id="@+id/headerFavCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Favorite Card"
                android:textAlignment="center"
                android:textSize="33sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/favImg"
                    android:layout_width="210dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:adjustViewBounds="true"
                    app:srcCompat="@drawable/card_back" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/favName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="name"

                        />

                    <TextView
                        android:id="@+id/favRace"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="race" />

                    <TextView
                        android:id="@+id/favCost"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="cost" />

                    <TextView
                        android:id="@+id/favAtk"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="atk" />

                    <TextView
                        android:id="@+id/favDef"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="def" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/nonSence"
                    android:layout_width="match_parent"
                    android:layout_height="93dp"
                    android:layout_weight="1"
                    android:text="Player Data"
                    android:textAlignment="center"
                    android:textSize="33sp" />

                <LinearLayout
                    android:layout_width="404dp"
                    android:layout_height="180dp"
                    android:layout_weight="1"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/homeCoins"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="coins"
                            android:textAlignment="center"
                            />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <ImageView
                                android:id="@+id/imageView2"
                                android:layout_width="4dp"
                                android:layout_height="19dp"
                                android:layout_weight="1"
                                app:srcCompat="@drawable/gold_coins_pic" />

                            <TextView
                                android:id="@+id/hCoins"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:text="playerCoins" />
                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="398dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/homeExp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="EXP"
                            android:textAlignment="center"
                            />

                        <ProgressBar
                            android:id="@+id/expBar"
                            style="?android:attr/progressBarStyleHorizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"

                            />

                        <TextView
                            android:id="@+id/expGrowth"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="expGrowth"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:id="@+id/textView5"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="level"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:id="@+id/userLevel"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TextView"
                            android:textAlignment="center"
                            />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        >

                        <TextView
                            android:id="@+id/homeCardCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cardCount"
                            android:textAlignment="center"
                            />

                        <TextView
                            android:id="@+id/hCardCount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="cardCount"
                            android:textAlignment="center"
                            />
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <TextView
                android:id="@+id/textView8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Wish-List"
                android:textAlignment="center"
                android:textSize="33sp" />

            <ImageView
                android:id="@+id/wishList"
                android:layout_width="match_parent"
                android:layout_height="168dp"
                app:srcCompat="@drawable/card_back" />

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:id="@+id/linearLayout6"
        android:layout_width="416dp"
        android:layout_height="65dp"
        android:background="@color/black"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/scrollView4">

        <ImageView
            android:id="@+id/menuHome"
            android:layout_width="78dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_menu_home" />

        <ImageView
            android:id="@+id/menuDeck"
            android:layout_width="71dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_menu_card" />

        <ImageView
            android:id="@+id/menuQuest"
            android:layout_width="72dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_menu_quest" />

        <ImageView
            android:id="@+id/menuMis"
            android:layout_width="76dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_menu_mis" />

        <ImageView
            android:id="@+id/menuOptions"
            android:layout_width="69dp"

            android:layout_height="wrap_content"
            android:gravity="center"
            android:src="@drawable/icon_menu_scroll" />


    </LinearLayout>


</android.support.constraint.ConstraintLayout>