<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <android.support.v7.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="574dp">

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="match_parent"
            android:layout_height="338dp"
            android:background="@drawable/quest_basic_scene"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="1dp">

            <ImageView
                android:id="@+id/enemy1"
                android:layout_width="462dp"
                android:layout_height="385dp"
                android:layout_alignTop="@+id/linearLayout"
                android:layout_alignEnd="@+id/linearLayout"
                android:layout_gravity="center"
                android:layout_weight="1"
                app:srcCompat="@drawable/card_back" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="horizontal"

                >

                <ImageView
                    android:id="@+id/enemy2"
                    android:layout_width="211dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="left"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/card_back" />

                <ImageView
                    android:id="@+id/enemy3"
                    android:layout_width="192dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="right"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/card_back" />
            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/enemyAtk"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Attack"
            app:layout_column="0"
            app:layout_row="1" />

        <LinearLayout
            android:layout_width="355dp"
            android:layout_height="179dp"
            android:orientation="horizontal"
            app:layout_column="0"
            app:layout_row="2">

            <ImageView
                android:id="@+id/questWinCard"
                android:layout_width="37dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:adjustViewBounds="true"
                app:srcCompat="@drawable/card_back" />

            <LinearLayout
                android:layout_width="78dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/questCoinsPic"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:layout_gravity="center"
                    app:srcCompat="@drawable/gold_coins_pic" />

                <TextView
                    android:id="@+id/questCoinsAmount"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textAlignment="center"
                    android:textSize="23sp" />
            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.GridLayout>

</RelativeLayout>